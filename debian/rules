#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


SRCDIR="$(CURDIR)"
BUILDDIR=$(CURDIR)/../build-powerpc-wrs-vxworks-binutils

ifeq ($(wildcard ../STMP_HOST_32),)
HOST="x86_64-unknown-linux-gnu"
else
ifeq ($(wildcard ../STMP_HOST_64),)
HOST="i686-pc-linux-gnu"
else
HOST=$(shell ./config.guess)
endif
endif

BUILD=$(shell ./config.guess)
TARGET="powerpc-wrs-vxworks"

%:
	dh $@ 

override_dh_auto_configure:
	[ -d $(BUILDDIR) ] || mkdir $(BUILDDIR)
	cd $(BUILDDIR) ; \
	$(SRCDIR)/configure \
		--prefix=/usr \
		--target=$(TARGET) \
		--host=$(HOST) \
		--build=$(BUILD) \
		--disable-nls

override_dh_auto_build:
	cd $(BUILDDIR) ; \
	make -j4

override_dh_auto_clean:
	[ -d $(BUILDDIR) ] || mkdir $(BUILDDIR)
	cd $(BUILDDIR) ; \
	[ ! -f Makefile ] || make distclean

override_dh_auto_install:
	cd $(BUILDDIR) ; \
	make install DESTDIR="$(SRCDIR)/debian/powerpc-wrs-vxworks-binutils"
	#get lintian & dpkg to shut up and not conflict with regular binutils
	rm -rf $(SRCDIR)/debian/powerpc-wrs-vxworks-binutils/usr/share/info
	rm -rf $(SRCDIR)/debian/powerpc-wrs-vxworks-binutils/usr/lib/libiberty.a

override_dh_strip:
	# do not strip
